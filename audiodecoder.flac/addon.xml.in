<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.flac"
  version="1.0.0"
  name="Flac Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="flac"
    extension=".flac"
    mimetype="audio/flac|audio/x-flac|application/x-flac"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Flac Audio Decoder</summary>
    <description lang="en">Flac Audio Decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
